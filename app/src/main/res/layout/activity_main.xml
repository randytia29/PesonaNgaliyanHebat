<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_tematik"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageView_wisata"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/icon_tematik"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView_wisata"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageView_kuliner"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/icon_wisata"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView_kuliner"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/icon_kuliner"
        tools:ignore="ContentDescription" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/it_squad_ngaliyan_2018"
            android:textColor="@color/sidekick_color" />
    </RelativeLayout>
</RelativeLayout>
