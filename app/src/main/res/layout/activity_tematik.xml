<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TematikActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kampung_snack"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_snack" />

            <ImageView
                android:id="@+id/kampung_jambu_kristal"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_jambu_kristal" />

            <ImageView
                android:id="@+id/kampung_souvenir"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_souvenir" />

            <ImageView
                android:id="@+id/kampung_criping"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_criping" />

            <ImageView
                android:id="@+id/kampung_bringinberseri"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_bringin_berseri" />

            <ImageView
                android:id="@+id/kampung_sulampita"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_sulam_pita" />

            <ImageView
                android:id="@+id/kampung_asri_berimbang"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_asriberimbang" />

            <ImageView
                android:id="@+id/kampung_ramah_keluarga"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_ramah_keluarga" />

            <ImageView
                android:id="@+id/kampung_olahan_gadung"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/kampung_keripik_gadung" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
